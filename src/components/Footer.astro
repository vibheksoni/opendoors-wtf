<script>
	// Scroll-driven sunrise animation
	const sunrise = document.querySelector('.sunrise') as HTMLElement;

	if (sunrise) {
		const updateSunrise = () => {
			const scrollHeight = document.documentElement.scrollHeight - window.innerHeight;
			const scrolled = window.scrollY;
			const remaining = scrollHeight - scrolled;

			// Start effect when within 600px of bottom
			const threshold = 600;

			if (remaining < threshold) {
				// 0 to 1 progress (1 is at bottom)
				const progress = Math.max(0, 1 - (remaining / threshold));

				// Transform: rise up
				const translateY = 100 - (progress * 100); // 100% down to 0%

				// Visual properties
				sunrise.style.transform = `translateX(-50%) translateY(${translateY}%) scale(${0.9 + progress * 0.2})`;
				sunrise.style.opacity = `${progress * 0.25}`; // Max opacity 0.25 (dimmer)
				sunrise.style.filter = `blur(${100}px)`; // Constant heavy blur
			} else {
				// Reset when far away
				sunrise.style.opacity = '0';
				sunrise.style.transform = `translateX(-50%) translateY(100%) scale(0.9)`;
			}
		};

		window.addEventListener('scroll', updateSunrise, { passive: true });
		// Initial check
		updateSunrise();
	}
</script>

<style>
	footer {
		position: relative;
		padding: 8em 1em 6em 1em; /* More top padding for the huge sun */
		background: transparent;
		color: #a1a1aa;
		text-align: center;
		overflow: hidden;
		border-top: 1px solid var(--border-subtle);
		margin-top: 4em;
	}

	.sunrise-container {
		position: absolute;
		bottom: 0;
		left: 0;
		width: 100%;
		height: 600px; /* Taller container */
		overflow: hidden;
		pointer-events: none;
		z-index: 0;
	}

	.sunrise {
		position: absolute;
		bottom: -150px;
		left: 50%;
		width: 100%; /* Full width to allow gradient to stretch */
		max-width: 1200px;
		height: 600px;
		/* Multistacked Yellow Layers: Core -> Mid -> Outer -> Edge */
		background: radial-gradient(
			circle at 50% 100%,
			rgba(255, 255, 255, 0.9) 0%,    /* White Hot Core */
			rgba(255, 255, 255, 0.8) 5%,
			rgba(253, 224, 71, 0.6) 5%,     /* Bright Yellow Layer */
			rgba(253, 224, 71, 0.5) 15%,
			rgba(234, 179, 8, 0.4) 15%,     /* Gold Layer */
			rgba(234, 179, 8, 0.3) 30%,
			rgba(202, 138, 4, 0.2) 30%,     /* Deep Orange-Gold Layer */
			rgba(202, 138, 4, 0.1) 50%,
			rgba(161, 98, 7, 0.05) 50%,     /* Faint Brown-Gold Edge */
			rgba(161, 98, 7, 0) 70%
		);
		transform: translateX(-50%) translateY(100%);
		filter: blur(40px); /* Reduced blur to keep "stacks" visible */
		opacity: 0;
		transition: transform 0.1s linear, opacity 0.1s linear;
		will-change: transform, opacity;
	}

	.content {
		position: relative;
		z-index: 1; /* Above the sun */
	}

	.copyright {
		margin-bottom: 1em;
		font-size: 0.9em;
	}

	.coffee-cta {
		margin-bottom: 1.5em;
		font-size: 0.95em;
	}

	.coffee-cta a {
		color: #f97316; /* accent */
		text-decoration: none;
		font-weight: 500;
		transition: color 0.2s;
	}

	.coffee-cta a:hover {
		color: #fff;
	}

	.agency-cta {
		margin-top: 0.5em;
		font-size: 0.9em;
		opacity: 0.9;
	}

	.social-links {
		display: flex;
		justify-content: center;
		gap: 1.5em;
		margin-top: 1em;
	}

	.social-links a {
		text-decoration: none;
		color: #71717a;
		transition: all 0.2s ease;
		transform: scale(1);
	}

	.social-links a:hover {
		color: #fff;
		transform: scale(1.1);
	}
</style>
