---
import { SITE_BRAND } from '../consts';
import { siteConfig } from '../config/site';
import HeaderLink from './HeaderLink.astro';

const basePath = import.meta.env.BASE_URL;
const withBase = (path: string) => {
	const normalized = path.replace(/^\//, '');
	return basePath.endsWith('/') ? `${basePath}${normalized}` : `${basePath}/${normalized}`;
};
---

<header class="floating-header">
	<nav>
		<div class="logo-container">
			<a href={withBase('/')} class="logo">
				&lt;{SITE_BRAND}.wtf/&gt;
			</a>
		</div>

		<div class="nav-links">
			<HeaderLink href={withBase('/')}>Home</HeaderLink>
			<HeaderLink href={withBase('/blog/')}>Blog</HeaderLink>
			<HeaderLink href={withBase('/about/')}>About</HeaderLink>
		</div>

		<div class="social-links">
